{
  "info": {
    "name": "Messaging API",
    "_postman_id": "messaging-api-123",
    "description": "API endpoints for messaging system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Messages",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/messages?filter={{filter}}",
          "host": ["{{baseUrl}}"],
          "path": ["messages"],
          "query": [
            {
              "key": "filter",
              "value": "{{filter}}",
              "description": "all|unread|archived"
            }
          ]
        }
      }
    },
    {
      "name": "Get Message Details",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/messages/:id",
          "host": ["{{baseUrl}}"],
          "path": ["messages", ":id"]
        }
      }
    },
    {
      "name": "Send Message",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recipient\": \"user_789\",\n  \"content\": \"Can we reschedule?\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/messages",
          "host": ["{{baseUrl}}"],
          "path": ["messages"]
        }
      }
    },
    {
      "name": "Mark as Read",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/messages/:id/read",
          "host": ["{{baseUrl}}"],
          "path": ["messages", ":id", "read"]
        }
      }
    },
    {
      "name": "Toggle Archive",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/messages/:id/archive",
          "host": ["{{baseUrl}}"],
          "path": ["messages", ":id", "archive"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here"
    },
    {
      "key": "filter",
      "value": "all"
    }
  ]
}
